@model List<ResultContactDto>
@{
    ViewData["Title"] = "İletişim Bilgileri";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered table-hover">
	@{
		int count = 0;
	}
	<tr>
		<th>#</th>
		<th>Harita</th>
		<th>Telefon</th>
		<th>E-Mail</th>
	</tr>
	@foreach (var item in Model)
	{
		count++; 
		<tr>
			<th>@count</th>
			<td><a href="@item.MapUrl" target="_blank">Harita Linki</a></td>
			<td>@item.Phone</td>
			<td>@item.Email</td>
			<td>
				<a asp-controller="Contact" asp-action="DeleteContact" asp-route-id="@item.ContactId" class="btn btn-danger">Sil</a>
				<a asp-controller="Contact" asp-action="UpdateContact" asp-route-id="@item.ContactId" class="btn btn-info">Güncelle</a>
			</td>
		</tr>
	}
</table>
<a asp-controller="Contact" asp-action="CreateContact" class="btn btn-dark">Yeni İletişim Bilgisi Ekle</a>

