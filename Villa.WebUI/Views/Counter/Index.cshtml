@model List<ResultCounterDto>
@{
    ViewData["Title"] = "Sayaç Bilgileri";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered table-hover">
	@{
		int count = 0;
	}
	<tr>
		<th>#</th>
		<th>Başlık</th>
		<th>Değer</th>
	</tr>
	@foreach (var item in Model)
	{
		count++;
		<tr>
			<th>@count</th>
			<td>@item.Title</td>
			<td>@item.Count</td>
			<td>
				<a asp-controller="Counter" asp-action="DeleteCounter" asp-route-id="@item.CounterId" class="btn btn-danger">Sil</a>
				<a asp-controller="Counter" asp-action="UpdateCounter" asp-route-id="@item.CounterId" class="btn btn-info">Güncelle</a>
			</td>
		</tr>
	}
</table>
<a asp-controller="Counter" asp-action="CreateCounter" class="btn btn-dark">Yeni Sayaç Bilgisi Ekle</a>


