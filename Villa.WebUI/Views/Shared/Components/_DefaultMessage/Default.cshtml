<div class="col-lg-5">
	<form asp-controller="SendMessage" asp-action="SendMessage" id="contact-form" method="post">
		<div class="row">
			<div class="col-lg-12">
				<fieldset>
					<label for="name">Ad Soyad</label>
					<input type="name" name="name" id="name" placeholder="Adınız Soyadınız..." autocomplete="on" required>
				</fieldset>
			</div>
			<div class="col-lg-12">
				<fieldset>
					<label for="email">E-Mail</label>
					<input type="text" name="email" id="email" placeholder="E-mail Adresiniz..." required="">
				</fieldset>
			</div>
			<div class="col-lg-12">
				<fieldset>
					<label for="subject">Konu</label>
					<input type="subject" name="subject" id="subject" placeholder="Konu..." autocomplete="on">
				</fieldset>
			</div>
			<div class="col-lg-12">
				<fieldset>
					<label for="message">Mesajınız</label>
					<textarea name="MessageContent" id="message" placeholder="Mesajınızı buraya yazabilirsiniz.."></textarea>
				</fieldset>
			</div>
			<div class="col-lg-12">
				<fieldset>
					<button type="submit" id="form-submit" class="orange-button">Mesajı Gönder</button>
				</fieldset>
			</div>
		</div>
	</form>
</div>