@model List<ResultProductDto>
@{
    ViewData["Title"] = "Mülklerimiz";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered table-hover">
	@{
		int count = 0;
	}
	<tr>
		<th>#</th>
		<th>Resim</th>
		<th>Başlık</th>
		<th>Kategori</th>
		<th>Fiyatı</th>
	</tr>
	@foreach (var item in Model)
	{
		count++;
		<tr>
			<th>@count</th>
			<td><img src="@item.ImageUrl" style="height:75px;width:75px;"/></td>
			<td>@item.Title</td>
			<td>@item.Category</td>
			<td>@item.Price ₺</td>
			<td>
				<a asp-controller="Product" asp-action="DeleteProduct" asp-route-id="@item.ProductId" class="btn btn-danger">Sil</a>
				<a asp-controller="Product" asp-action="UpdateProduct" asp-route-id="@item.ProductId" class="btn btn-info">Güncelle</a>
				<a asp-controller="Product" asp-action="ProductDetails" asp-route-id="@item.ProductId" class="btn btn-primary">Detaylar</a>
			</td>
		</tr>
	}
</table>
<a asp-controller="Product" asp-action="CreateProduct" class="btn btn-dark">Yeni Mülk Ekle</a>

